<% include ./partials/header %>
<form action="/posts" method="POST">
  <div class="form-group">
    <input 
      type="text" 
      class="form-control" 
      name="title" 
      placeholder="Enter title here">
  </div>
  <div class="form-group">
    <textarea 
      type="text" 
      class="form-control" 
      name="entry" 
      placeholder="New post"></textarea>
  </div>
  <div class="form-group">
    <input 
      type="text" 
      class="form-control" 
      name="name" 
      placeholder="Author">
  </div>
  <div class="form-group"> 
    <button class="btn btn-primary btn-lrg btn-block">Publish</button>
  </div>
</form>

<% include ./partials/footer %>