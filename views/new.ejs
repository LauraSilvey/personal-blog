<% include ./partials/header %>

<div class="container main-new">
  <h3 class="view-header text-center">New Post</h3>
  <form class="form" action="/posts" method="POST">
    <div class="form-group">
      <input 
        type="text" 
        class="form-control" 
        name="title" 
        placeholder="Enter title here">
    </div>
    <div class="form-group">
      <textarea 
        id="summernote" 
        type="text" 
        class="form-control" 
        name="entry" 
        placeholder="New post"></textarea>
    </div>
    <div class="form-group"> 
      <button class="btn btn-primary btn-lrg btn-block">Publish</button>
    </div>
  </form>
</div>

<% include ./partials/footer %>