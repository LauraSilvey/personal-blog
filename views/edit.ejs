<% include ./partials/header %>

<div class="container main-edit">
  <h3 class="view-header text-center">Edit Form</h3>
  <form class="form" action="/posts/<%= post._id %>?_method=PUT" method="POST">
    <div class="form-group">
      <input 
        type="text" 
        class="form-control" 
        name="post[title]" 
        value="<%= post.title %>">
    </div>
    <div class="form-group">
      <textarea 
        id="summernote"
        type="text" 
        class="form-control" 
        name="post[entry]" 
      ><%- post.entry %></textarea>
    </div>
    <div class="form-group"> 
      <button class="btn btn-primary btn-lrg btn-block">Publish</button>
    </div>
  </form>
</div>
<% include ./partials/footer %>