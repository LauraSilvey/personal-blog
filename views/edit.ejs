<% include ./partials/header %>
<h1>Edit Form</h1>

<form action="/posts/<%= post._id %>?_method=PUT" method="POST">
  <div class="form-group">
    <input 
      type="text" 
      class="form-control" 
      name="post[title]" 
      placeholder="<%= post.title %>">
  </div>
  <div class="form-group">
    <textarea 
      type="text" 
      class="form-control" 
      name="post[entry]" 
    ><%= post.entry %></textarea>
  </div>
  <div class="form-group">
    <input 
      type="text" 
      class="form-control" 
      name="post[name]" 
      placeholder="<%= post.name %>">
  </div>
  <div class="form-group"> 
    <button class="btn btn-primary btn-lrg btn-block">Publish</button>
  </div>
</form>

<% include ./partials/footer %>