<% include ./partials/header %>



<div class="container-fluid">
  <article class="container">
    <% posts.forEach(function(post){%>
      <h1><%= post.title %></h1>
      <div class="entry">
        <p><%- post.entry %></p>
      </div>
      <p><%= post.author %></p>
      <a href="/posts/<%= post._id %>" class="btn btn-info btn-sm" role="button">Read More</a>
    <%});%>
    <a href="/posts/new" class="btn btn-primary btn-lg" role="button">New Post</a>
  </article>
</div>
<% include ./partials/footer %>